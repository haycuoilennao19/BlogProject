<%- include('header') -%>
<!--Content-->

<div class="container mt-5 mb-5">
  <div class="form-title text-center">
    <h2>Add Article</h2>
  </div>
  <form method="POST" action="/post/addpost" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exampleInputEmail1"><h4>Title</h4></label>
      <input type="text" class="form-control" name="title"
        placeholder="Enter title">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1"><h4>Sub Title</h4></label>
      <input type="text" class="form-control" name="subtitle"
        placeholder="Enter subTitle">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1"><h4>Content</h4></label>
      <textarea class="form-control" id ="trumbowyg-demo" type="text" name="content" placeholder="Add Content"></textarea>
    </div>
    <div class="form-group">
    <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Category</label>
      <select class="custom-select mr-sm-2" name="category" id="inlineFormCustomSelect">
        <option selected>Choose...</option>
        <% for(var i = 0; i < categories.length; i++) { %>
          <% console.log(categories[i])%>
          <option value='<%= categories[i].id %>'><%=categories[i].category%></option>
        <% } %>
      </select>
    </div>
 
    <div class="form-group">
    <h4>File Image</h4>
    <div class="custom-file">
        <input type="file" class="custom-file-input" name="file" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
      </div>
    </div>
    <button type="submit" id="submit" class="btn btn-success">Add Post</button>
  </div>
    
  </form>
</div>

script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-3.3.1.min.js"><\/script>')</script>
<script src="/Trumbowyg-master/dist/trumbowyg.min.js"></script>
  <script>
    $('#trumbowyg-demo').trumbowyg();
  </script>


<%- include('footer') -%>