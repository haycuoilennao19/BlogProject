<%- include('header') -%>
<!--Content-->

<div class="container mt-5 mb-5">
  <div class="form-title text-center">
    <h2>Add Article</h2>
  </div>
  <form method="POST" action="/post/addpost" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exampleInputEmail1"><h4>Title</h4></label>
      <input type="text" class="form-control" name="title"
        placeholder="Enter title">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1"><h4>Sub Title</h4></label>
      <input type="text" class="form-control" name="subtitle"
        placeholder="Enter subTitle">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1"><h4>Content</h4></label>
      <textarea class="form-control" id="editor" name="content" placeholder="Add Content" rows="5"></textarea>
    </div>
    <div class="form-group">
    <h4>File Image</h4>
    <div class="custom-file">
        <input type="file" class="custom-file-input" name="file" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
      </div>
    </div>
    <button type="submit" id="submit" class="btn btn-success">Add Post</button>
  </div>
    
  </form>
</div>
<script src="/javascripts/ckeditor/ckeditor.js"></script>

<script>
    CKEDITOR.plugins.addExternal('codesnippet', '/javascripts/ckeditor/plugins/codesnippet/')
    //CKEDITOR.config.codesnippet_theme = 'school_book'
    CKEDITOR.replace( 'editor', {
      extraPlugins: 'codesnippet'
    });
</script>

<%- include('footer') -%>