
<%- include('header') -%>
<!--Content-->
<div class="container mt-5 mb-5">
    <div class="form-title text-center">
      <h2>Edit Article</h2>
    </div>
    <form method="POST" action="/post/editpost/<%-post.id%>" enctype="multipart/form-data">
      <div class="form-group">
        <label for="exampleInputEmail1"><h4>Title</h4></label>
        <input type="text" class="form-control" name="title"
          placeholder="Enter title" value="<%=post.title%>">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1"><h4>Sub Title</h4></label>
        <input type="text" class="form-control" name="subtitle"
          placeholder="Enter subTitle" value="<%=post.subtitle%>">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1"><h4>Content Main</h4></label>
        <input class="form-control" type="text"  name="content" placeholder="Add Content" rows="5">
      </div>
    
      <div class="form-group">
        <label for="exampleInputPassword1"><h4>Content</h4></label>
        <input class="form-control" type="text" value="<%=post.content%>" name="content1" placeholder="Add Content" rows="5">
      </div>


      <!-- <textarea class="content" name="content" placeholder="Add Content"></textarea> -->
      <div class="form-group">
      <h4>File Image</h4>
      <div class="custom-file">
          <input type="file" class="custom-file-input" name="file" id="customFile">
          <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
      </div>
    
      <button type="submit" id="submit" class="btn btn-success">Edit Post</button>
      
    </div>
    </form>
  </div>
  
  <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-3.3.1.min.js"><\/script>')</script>
<script src="/Trumbowyg-master/dist/trumbowyg.min.js"></script>
