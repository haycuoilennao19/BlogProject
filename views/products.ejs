  <div class="row">
    <div class="col-lg-8  context-box-scroll col-md-12 col-xs-12">
      <% posts.forEach(function(post){ %>
      <div class="card border-0 shadow">
        <h5 class="card-header"> <img src="<%-post.file%>" class="card-img-top" alt="..."></h5>
        <h3 class="button-article"><button type="button"
            class="<%-post.category%> btn shadow-sm rounded btn-success m-3 pl-5 pr-5"><%=post.category%></button></h3>
        <div class="card-body">
          <h5 class="card-title"><a class="hvr-underline-from-center pt-2 pb-2" href="/article/<%-post.id%>"><%=post.title%></a></h5>
          <hr />
          <p class="card-text text-justify"><%-post.subtitle%></p>
          <p class="text-muted"><i class="fa fa-clock-o" aria-hidden="true"></i> <%=post.date%></p>
          <div class="d-flex justify-content-end">
            <button class="learn-more">
              <span class="circle">
                <span class="icon arrow"></span>
              </span>
              <a href="/article/<%-post.id%>"><span class="button-text">Tiếp tục đọc</span></a>
            </button>
          </div>
        </div>
      </div>
      <div class="mb-5"></div>
      <% }) %>
      <% if (pages > 0) { %>
        <ul class="pagination  justify-content-center">
            <% if (current == 1) { %>
                <li class="page-item " class="disabled"><a class="page-link">Đầu Trang</a></li>
            <% } else { %>
                <li class="page-item "><a class="page-link" href="/1">Đầu Trang</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="page-item" class="disabled"><a class="page-link">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="page-item" class="active"><a class="page-link"><%= i %></a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="page-item" class="disabled"><a class="page-link">...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="page-item" class="disabled"><a class="page-link">Cuối Trang</a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="/<%= pages %>">Cuối Trang</a></li>
            <% } %>
        </ul>
    <% } %>
